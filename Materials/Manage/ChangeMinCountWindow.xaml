<Window x:Class="Materials.Manage.ChangeMinCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Materials.Manage"
        mc:Ignorable="d"
        Title="ChangeMinCountWindow" Height="150" Width="200">
    <Grid>
        <Label Content="Изменить на:"
               Height="30"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"/>
        <TextBox Name="TextBox_Count"
                 Width="100"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
        <Button Content="Изменить" Click="Button_Change_Click" Height="20" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
